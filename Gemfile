source 'https://rubygems.org'


gem 'rails', '4.2.5'

gem 'pg'
gem 'puma'
gem 'jwt'

group :development, :test do
  # debuggers
  gem 'byebug'
  gem 'pry'
  gem 'pry-rails'

  # TDD
  gem 'rspec'
  gem 'rspec-rails'
  gem 'spring-commands-rspec'
  gem 'factory_girl'
  gem 'factory_girl_rails'
  gem 'database_cleaner'
end

group :development do
  gem 'spring'

  # deploy tools
  gem 'capistrano'
  gem 'capistrano-rails'
end

group :test do
  # CI plugins
  gem 'ci_reporter'
  gem 'ci_reporter_rspec'
end
